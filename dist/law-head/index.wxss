.header {
  position: relative;
  width: 100%;
  height: 480rpx;
}

.header .title {
  position: absolute;
  font-size: 18px;
  font-weight: 600;
  color: #fff;
  font-family: PingFang SC;
  top: 30px;
  left: 20px;
  z-index: 100;
}

.header .img {
  width: 100%;
  height: 480rpx;
}

.header .back-img {
  position: absolute;
  top: 16px;
  right: 88px;
  width: 60px;
  height: 60px;
}

.header .input-wrapper-outer {
  width: 100%;
  position: absolute;
  top: 220rpx;
  text-align: center;
}

.header .input-wrapper-outer .input-wrapper-inner {
  width: 90%;
  display: inline-block;
  position: relative;
}

.header .input-wrapper-outer input {
  border: 1px solid #fff;
  display: inline-block;
  width: 100%;
  height: 40px;
  line-height: 40px;
  padding-right: 50px;
  box-sizing: border-box;
  color: white;
  text-align: left;
  padding-left: 10px;
}

.placeholder-class {
  color: white;
}

.header .input-wrapper-outer .input-wrapper-inner .search-icon {
  position: absolute;
  right: 15px;
  top: 10px;
}

.query-criteria {
  position: absolute;
  top: 70px;
  left: 20px;
  display: flex;
}

.query-criteria .icon-wrapper {}

.query-criteria .query-title {
  color: #fff;
  font-size: 12px;
  position: relative;
  top: 5px;
}
