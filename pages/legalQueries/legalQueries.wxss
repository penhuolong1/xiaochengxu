.wrapper {
  padding: 20px;
  box-sizing: border-box;
}

.law-item {
  width: 100%;
  height: 240rpx;
  display: flex;
  border-radius: 8px;
  box-shadow: 0px 3px 6px rgba(114, 126, 139, 0.15);
  margin-bottom: 15px;
  position: relative;
}

.law-item .title-wrapper {
  width: 100px;
  line-height: 240rpx;
  font-size: 16px;
  font-weight: 600;
  font-family: PingFang SC;
  color: #334674;
  margin-left: 20px;
}

.law-item .img-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.law-item .img-wrapper image {
  float: right;
  display: inline-block;
  width: 100%;
  height: 100%;
}
