.wrapper {
  border-top: 1px solid #F2F5F8;
  background-color: #fff;
}

.send-wrapper {
  display: flex;
  width: 100%;
  box-sizing: border-box;
  padding: 15px 20px;
}

.send-wrapper .text {
  flex: 1;
}

.send-wrapper .text input {
  width: 100%;
}

.send-wrapper .send-img-btn {
  width: 60px;
  text-align: right;
}

.send-wrapper .send-img-btn image {
  width: 21px;
  height: 15px;
}

.function-wrapper {
  height: 40px;
  line-height: 40px;
}

.function-wrapper image {
  height: 20px;
  margin-left: 20px;
}

.function-wrapper .voice-png {
  width: 20px;
}

.function-wrapper .folder-png {
  width: 25px;
}

.function-wrapper .image-png {
  width: 25px;
}

.function-wrapper .camera-png {
  width: 25px;
}

.function-wrapper .camera1-png {
  width: 30px;
}

.function-wrapper .edit-png {
  width: 20px;
}

.sound-record-wrapper {
  line-height: 300rpx;
  display: flex;
  height: 300rpx;
}

.sound-record-wrapper .sound-record-image-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;

}

.sound-record-wrapper image {
  display: inline-block;
  width: 132rpx;
  height: 132rpx;
}

.sound-record-image-wrapper .record-sound {
  width: 200rpx;
  height: 200rpx;
}

.upload-wrapper .content {
  width: 100%;
  overflow-x: auto;
  display: flex;
}

.upload-wrapper .upload-img-wrapper {
  width: 200rpx;
  height: 300rpx;
  position: relative;
}

.upload-wrapper .upload-img-wrapper image {
  width: 200rpx;
  height: 300rpx;
}

.upload-wrapper .upload-img-wrapper .cbox {
  position: absolute;
  top: 0px;
  right: 0px;
}

.send-img-wrapper {
  height: 30px;
  line-height: 30px;
  overflow: hidden;
}

.send-img-wrapper .send {
  float: right;
  color: #4285F4;
  font-size: 14px;
  font-weight: bold;
  margin-right: 10px;
}

/* 文件上传 */
.file-wrapper {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
  background-color: #fff;
}

.file-wrapper {
  padding: 20px;
  box-sizing: border-box;
}

.file-wrapper .header {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 30rpx;
  background-color: #F7FBFF;
  color: #4285F4;
  font-size: 14px;
  font-weight: bold;
}

.file-wrapper .content {
  margin-top: 10px;
}

.file-wrapper .content .item {
  height: 120rpx;
  line-height: 120rpx;
  color: #323643;
  border-bottom: 1px solid #F2F5F8;
  font-size: 14px;
  display: flex;
  justify-content: space-between;
}

.file-wrapper .content .item text {
  max-width: 200px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.file-wrapper .content image {
  width: 20px;
  height: 15px;
  margin-top: 10px;
  position: relative;
  top: 13px;
}

.file-wrapper .submit-wrapper {
  line-height: 100rpx;
  height: 100rpx;
  background-color: #4285F4;
  color: #fff;
  text-align: center;
  font-size: 14px;
  font-weight: bold;
  border-radius: 20px;
  position: fixed;
  bottom: 20px;
  right: 20px;
  left: 20px;
}
