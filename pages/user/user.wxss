/* pages/user/user.wxss */
.user-main{
  width: 100%;
  height: 100%;
  position: relative;
}
.content{
  height:calc(100% - 60px);
  width:100%;
  background:#fff;
  padding-top: 20px;
}
.user-names{
  margin-bottom:20px;
  height:125px;
  padding:15px 30px;
  background: #fff;
  text-align: center;
}
.headImg {
  height:90px;
  width:90px;
  border: 2px solid #4285F4;
  border-radius: 50%;
  margin:0 auto;
}
.headImg image{
  height:84%;
  width:84%;
  margin: 8% auto;
  border-radius: 50%;
  background-color:#E2E6EC;
}
.name-content{
  height:100%;
  text-align: center;
}
.namesa{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  line-height: 60px;
}
.name-btn{
  float: right;
  /* line-height: 70px; */
}
.user-attest{
  /* float: right; */
  line-height: 25px;
  font-size:12px;
  background: #F9FAF5;
  padding-left:8px;
  padding-right:8px;
  border-radius: 20px;
}
.user-attested{
   color: #1290F3;
   border:1px solid #1290F3;
   margin-top:20px;
}
.attestColor {
  color:#1DD2C1;
}
.user-attestNoe{
  color: #FF2D55;
  border:1px solid #FF2D55;
  margin-top:15px;
}
.user-menu{
  padding:15px 40px;
  border-top:1px solid rgba(242,245,248,1.00);
  background: #fff;
}
.user-menu-item{
  height: 65px;
  width:100%;
  border-bottom: 1px solid rgba(242,245,248,1.00);
}
.user-menu-item text{
  line-height: 65px;
  color:#323643;
}
.item-icon{
  height: 30px;
  width: 30px;
  margin-right: 15px;
  display: inline-block;
  vertical-align:middle;
  line-height:65px;
}
.submit {
    width: 544rpx;
    height: 88rpx;
    line-height: 88rpx;
    border-radius: 44rpx;
    background:#4285F4; 
    color: #fff;
    font-size: 34rpx;
    margin-top:50px;
}
