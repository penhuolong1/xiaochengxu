}
.contents{
  text-align: left;
}
.green {
    color: green;
}
.red{
    color:red;
}


.plaim-span{
    padding: 5px;
    color: #fff;
    background: #40a9ff;
    margin-right: 5px;
}
.defent-span{

    padding: 5px;
    color: #40a9ff;
    border: 1px solid #40a9ff;
    margin-right: 5px;
}
.law-span{
    padding: 5px;
    margin-right: 5px;
    color: #40a9ff;
}
.times{
  float: right;
  display: inline-block;
  font-size: 12px;
  line-height: 45px;
}
.picShow{
  position: absolute;
  width: 70%;
  height: 300px;
  top:50%;
  left:50%;
  margin-top:-220px;
  margin-left:-45%;
  /* padding:10px; */
  padding-top:40px;
  padding-left:40px;
  padding-right:40px;
  padding-bottom:40px;
  z-index: 99999999;
  background: #fff;
}
.picShow image{
  width: 100%;
  /* height:200px; */
}
.quit-b{
    background-color: white;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    position: absolute;
    right: 0px;
    top: 0px;
    cursor: pointer;
}
.quit {
    width: 40px;
    height: 40px;
}
.pic-mask{
  position:fixed;
  top:0;
  left:0;
  right:0;
  bottom:0;
  z-index:999;
  background:rgba(0,0,0,.6);
  transition:all .3s ease-in-out;
  /* z-index: 9999999; */
  display: none;
}