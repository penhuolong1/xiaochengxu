  font-size: 13px;
}
.three-con text{
  text-align: center;
}
.reason-cont{
  margin-top:10px;
}
.three{
  width: 31%;
  display: inline-block;
  line-height: 35px;
  font-weight: 600;
  /* margin-left:1.5%; */
}
.three text{
  font-weight: normal;
}
.reason{
  display: inline-block;
  width: 23%;
