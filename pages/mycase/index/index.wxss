.listcontent{
  overflow-y: scroll;
  height:calc(100% - 30px);
  padding-top:40px;
}
.caseList {
  width: 90%;
  display: flex;
  margin: 0 auto;
  line-height: 60px;
  border-bottom: 1px solid #F2F5F8;
}
.caseList .left { 
  flex-grow: 1;
  font-size: 14px;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  padding-left:18px;
}
.caseList .right{
  width:30px;
  line-height:52px;
}
.footer-item {
  width: 50%;
}

.plade{
  color:#fff;
  font-size: 18px
}
.lists{
  background: #fff;
  /* color: #40a9ff; */
  text-align: left;
  padding: 15px;
  margin: 15px 15px 15px 15px;
  border-radius: 8px 8px 8px 8px;
  /* box-shadow: -2px 2px 4px rgba(41, 10, 77, 0.5); */
  transition: all 0.2s ease-in;
  transition: opacity 0.3s ease-out;
  transition: opacity 0.2s ease-in;
  /* transition: height 0.3s ease-in; */
  max-height: 50px;
  opacity: 1;
  position: relative;
  border-bottom:1px solid #ccc;
  /* box-shadow: inset 0px 0px 10px #eee; */
  /* background: #eee; */
}

.lists:active{
  box-shadow: 0px 2px 0px rgba(41, 10, 77, 0.5), 0px 1px 2px rgba(0, 0, 0, .7);
  position: relative;
  top: 4px;
}
.light{
    display: inline-block;
    width: 25px;
    height: 25px;
    border-radius: 50%;
    position: absolute;
    right:15px;
    line-height: 57px;
}
.open{
    background: #04d712;
    box-shadow:  1px 2px 6px #5ff75f;
}
.disable{
  background: #999;
  box-shadow: inset 0px 0px 10px #eee;
}

.loads{
  color: #fff
}
.i-load-more-tip{
  color: #fff !important;
}