.listcontent{
  overflow-y: scroll;
  height: calc(100% - 75px);
  margin-top: 20px;
}
.caseList {
  width: 90%;
  display: flex;
  margin: 0 auto;
  line-height: 60px;
  border-bottom: 1px solid #F2F5F8;
}
.caseList .left { 
  flex-grow: 1;
  font-size: 14px;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.caseList .right{
  width:30px;
  line-height:52px;
}
.caseList .right .check {
  color: #86D530;
}
.footer-item {
  width: 50%;
}
.menu-footer{
  /* top: 75px; */
  position: relative;
}
.textIco-b{
  float: left;
  text-align: center;
  margin-right: 5px;
}
.textIco-b image{
  width: 12px;
}
.filters-mask{
  width: 100%;
  height: 100%;
  opacity: 0;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9999;
}


.plade{
  color:#fff;
  font-size: 18px
}
.lists{
  background: #fff;
  /* color: #40a9ff; */
  text-align: left;
  padding: 15px;
  margin: 15px 15px 15px 15px;
  border-radius: 8px 8px 8px 8px;
  /* box-shadow: -2px 2px 4px rgba(41, 10, 77, 0.5); */
  transition: all 0.2s ease-in;
  transition: opacity 0.3s ease-out;
  transition: opacity 0.2s ease-in;
  /* transition: height 0.3s ease-in; */
  max-height: 50px;
  opacity: 1;
  position: relative;
  border-bottom:1px solid #ccc;
  /* box-shadow: inset 0px 0px 10px #eee; */
  /* background: #eee; */
}

.lists:active{
  box-shadow: 0px 2px 0px rgba(41, 10, 77, 0.5), 0px 1px 2px rgba(0, 0, 0, .7);
  position: relative;
  top: 4px;
}
.light{
    display: inline-block;
    width: 25px;
    height: 25px;
    border-radius: 50%;
    position: absolute;
    right:15px;
    line-height: 57px;
}
.open{
    background: #04d712;
    box-shadow:  1px 2px 6px #5ff75f;
}
.disable{
  background: #999;
  box-shadow: inset 0px 0px 10px #eee;
}
.listMain{
  height:calc(100% - 135px);
  position: relative;
}

.loads{
  color: #fff
}
.i-load-more-tip{
  color: #fff !important;
}

/* 公共按钮样式 */
.btn-box{
  position:fixed;
  bottom:10rpx;
  right:0px;
  width:100%;
}
.btn {
  width: 480rpx;
  height: 88rpx;
  margin-bottom: 30rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 34rpx;
  border: 1px solid #ccc;
}
.icon {
  font-weight:bold
}
.list-item {
  position: relative;
  padding: 0 50rpx;
  display: flex;
  line-height: 80rpx;
  font-size: 32rpx;
}
.line {
  height: 1px;
  width: 90%;
  margin-left: 5%;
  background: #eee;
}
.open-btn{
  position: absolute;
  right: 50rpx;
}
.item-title {
  display: inline-block;
  width: calc(100vw - 300rpx);
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.item-tip {
  position: absolute;
  left: 0;
  padding: 6rpx 10rpx;
  margin-top: 20rpx;
  width: 85rpx;
  height: 30rpx;
  line-height: 30rpx;
  font-size: 24rpx;
  background: #ccc;
  color: #fff;
  border-bottom-right-radius: 100px;
  border-top-right-radius: 100px;
}
.check-icon {
  display: inline-block;
  width: 60rpx;
  /* margin-left:66rpx; */
}
.item-show {
  position: absolute;
  right: 30rpx;
  color:#727E8B;
}
.icon {
  font-weight: bold;
  transition: .5s
}
.rotate {
  transform:rotate(180deg);
  -ms-transform:rotate(180deg); 	/* IE 9 */
  -moz-transform:rotate(180deg); 	/* Firefox */
  -webkit-transform:rotate(180deg); /* Safari 和 Chrome */
  -o-transform:rotate(180deg);
}
.item-about {
  overflow:hidden;
  transition: .5s;
}