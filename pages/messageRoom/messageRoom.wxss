.homePage {
  width: 100%;
  height: 100%;
  position: relative;
}
.editBox {
  position: absolute;
  height: 40px;
  padding: 10px 0;
  width: 100%;
  border-top: 1px solid #F2F5F8;
  bottom: 0;
  left: 0;
  display:flex;
}
.editBox image{
  width:20px;
  height:20px;
  margin-top: 7px;
}
.editBox .left{
  order:1;
  width:50px;
  text-align: center;
}
.editBox .right{
  order:3;
  width:50px;
  text-align: center;
}
.editBox .main{
  order:2;
  flex-grow:1;
}
.editBox .main textarea{
  width:90%;
  height: 60%;
  background-color: #E2E6EC;
  border-radius: 10px;
  padding: 5px 10px;
}
.content{
  height:calc(100% - 60px);
  width: 100%;
  background:#fff;
}
.everyMsg {
  width: 90%;
  margin: 0 auto;
}
.time {
  text-align: center;
  font-size: 12px;
  color: rgba(174,181,192,1);
  line-height: 30px;
}
.everyMsg image {
  width: 42px;
  height: 42px;
  border-radius: 16px;
  background-color: #ccc;
  margin: 0 10px;
}
.headImg {
  display:table-cell;
}
.msgText {
  max-width: 230px;
  padding: 8px 12px;
  display: inline-block;
  display:table-cell;
  vertical-align:top;
  font-size: 14px;
  line-height: 30px;
}
.leftTxt {
  color:#22345E;
  border-radius: 10px 10px 10px 0;
  background-color:#E2E6EC;
}
.rightTxt {
  color:#fff;
  border-radius: 10px 10px 0 10px;
  background-color:#4285F4;
  

}