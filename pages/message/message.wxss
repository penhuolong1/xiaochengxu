/* pages/message/message.wxss */
view, scroll-view, swiper, button, input, textarea, label, navigator, image {
  box-sizing:content-box;
}
.menu {
  position:fixed;
  background-color:#fff;
  height: 70px;
  width: 100%;
  z-index: 9999;
}
.message-main{
  width: 100%;
  height: 100%;
  position: relative;
}
.content{
  height:calc(100% - 60px);
  width:100%;
  margin-top: 62px;
}
.message-content{
  padding:10px 15px;
  height: 52px;
  margin-top: 5px;
  margin-bottom: 10px;
  background:#fff;
}
.text-content{
  width:calc(100% - 76px);
  height:100%;
  float:right;
}
.message-tit{
  font-size: 16px;
  /* font-weight: 600; */
  float: left;
  line-height: 35px;
}
.message-time{
  float: right;
  font-size: 12px;
  line-height:35px;
  color: #AEB5C0;
}
.message-title{
  width:100%;
  height:36px;
}
.message-tip{
  font-size: 14px;
  line-height:25px;
  width: 100%;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  color: #7C7C7A;
}
.message {
  height:60px;
  width:60px;
  background-color:#AEB5C0;
  display:inline-block;
  margin-right:15px;
  margin-top:2px;
  border-radius:20px;
  position: relative;
}
.message image{
  width: 100%;
  height: 100%;
  border-radius:20px;
}
.message .msgNum {
  background-color:#98E165;
  color:#ffffff;
  font-size:12px;
  padding:5px;
  border-radius:50%;
  line-height:16px;
  padding:0 5px;
  position: absolute;
  right:-3px;
  bottom: -3px;
  border: 2px solid #ffffff;
  width: 6px;
  height: 16px;
}
.systemMsg {
  height:120px;
  overflow-y:auto;
  margin-top:10px;
  border-top:1px solid #F2F5F8;
  border-bottom:1px solid #F2F5F8;
  color:#C1C0C8;
  font-size:14px;
  padding:10px 18px;
}