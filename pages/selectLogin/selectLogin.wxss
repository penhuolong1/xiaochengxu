.user-main{
  width: 100%;
  height: 100%;
  position: relative;
}
.content{
  height:calc(100% - 60px);
  width:100%;
  background:#fff;
  padding-top: 20px;
}
.roleBox {
  width: 88%;
  height: 240px;
  margin: 0 auto 30px auto;
  border: 1px solid rgba(242,245,248,1);
  box-shadow: 0px 3px 6px 0px rgba(0,0,0,0.16);
  position: relative;
}
.roleBox image{
  width: 100%;
  height: 100%;
}
.roleText {
  position:absolute;
  left: 0;
  top: 0;
  background-color:#4285F4;
  color:#fff;
  line-height: 30px;
  border-radius: 0 30px 30px 0;
  padding: 0 20px;
  font-size: 14px;
  z-index: 11 ;
}
.getBtn {
  position:absolute;
  left: 0;
  top: 0;
  z-index: 10;
  width: 100%;
  height: 100%;
  background-color: rgba(255,255,255,0)
}